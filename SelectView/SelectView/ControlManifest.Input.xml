<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="hdn" constructor="SelectView" version="1.2.0" display-name-key="Select View" description-key="A Select field to allow the selection of a View" control-type="standard">
    <property name="View" display-name-key="View" description-key="View" of-type="SingleLine.Text" usage="bound" required="true" />
    <property name="Entity" display-name-key="Entity" description-key="The Entity of the views you wish to select" of-type="SingleLine.Text" usage="input" required="true" />  
    
    <resources>
      <code path="index.ts" order="1"/>
      <css path="css/AttributeList.css" order="1" />
      <img path="img/DownArrowTransparent.png" />
       <img path="img/DownArrowTransparent2.png" />
    </resources>

    <feature-usage>
      <uses-feature name="Utility" required="true" />
    </feature-usage>
    
  </control>
</manifest>